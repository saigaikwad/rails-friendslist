<p style="color: green"><%= notice %></p>

<body style="color: black">

<table class="table caption-top table-responsive table-bordered">
  <caption>List of Friends</caption>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Instagram</th>
      <th>USER ID</th>
      <th>Shows</th>
      
      <th>Edit</th>
      <th>Delete</th>
      
    </tr>
  </thead>
  <tbody>
    
    <% @friends.each do |friend| %>
    <%if friend.user == current_user%>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone_no %></td>
        <td><%= friend.instagram %></td>
        <td><%= friend.user_id %>
        <td>
          <%= link_to "Show", friend %>
        </td>
        
          <td>
          <%= link_to "Edit", edit_friend_path(friend) %>
          </td>
          <td>
          <%= link_to "Destroy", friend, method: :delete, data: { confirm: 'Are you sure?' } %>
         </td>
        
        
         
        
      </tr>
      <%end%>
    <% end %>
    
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
</body>
